{
  "manifest_version": 2,
  "name": "PinkWard",
  "version": "1.0",
  "description": "Detecta tentativas de conexões a domínios de terceiros.",
  
  "permissions": [
                "<all_urls>", 
                "activeTab",
                "storage",
                "tabs",
                "cookies", 
                "webRequest",
                "notifications",
                "webRequestBlocking"
                ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "PinkWard",
    "default_popup": "popup/popup.html"
  }
}
